generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  balance  Float    @default(0) // implement balance
  Inventory Inventory[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model pogs {
  id        String   @id @default(cuid())
  name      String
  ticker_symbol String
  price     Float
  color    String
  Inventory Inventory[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Inventory {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  pog       pogs     @relation(fields: [pogId], references: [id])
  pogId     String
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}